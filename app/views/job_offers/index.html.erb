<p id="notice"><%= notice %></p>

<h1>Listing Job Offers</h1>

    <h3>There is <%= @job_offers.length %> job offers</h3>
    <% @job_offers.each do |job_offer| %>
      <div class="panel panel-default">
        <div class="panel-heading"><%= job_offer.job_title %> at <%= job_offer.organization_name %></div>
        <div class="panel-body">
          <ul>
          <li>Agence : <%= job_offer.agency_sub_element %> | Who may apply : <%= job_offer.who_may_apply_text %></li>
          <li>Pay plan : <%= job_offer.pay_plan %> | Job Offer : <%= job_offer.series %> | Job Offer Grade : <%= job_offer.grade %></li>
          <li>Work Schedule :<%= job_offer.work_schedule %>, Work Type : <%= job_offer.work_type %></li>
          <li>Location : <%= job_offer.locations %></li>
          <li><%= job_offer.job_summary %></li>
          <li><%= link_to(job_offer.apply_online_url) %></li>
        <div class="panel-footer">More infos</div>
        Minimum/Maximum Salary : <%= job_offer.salary_min %> / <%= job_offer.salary_max %> <br />
          Basic Salary: <%= job_offer.salary_basis %><br />
        From <%= job_offer.start_date %> to <%= job_offer.end_date %><br />
          
        </div>
      </div>
    <% end %>

<br>

